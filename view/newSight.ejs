<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="./img/favicon.png" />
    <link rel="stylesheet" href="./styles/newSightStyle.css">
    <title>NewSight | Home</title>
</head>

<body>
    <header>
        <h1>NewSight</h1>
    </header>
    <main>
        <section>
            <% articles.forEach(function(article) { %>
                <article class="article">
                    <img src="<%= article.urlToImage %>" alt="Cover of <%= article.title %>" background-color="#333">
                    <div class="article-content">
                        <h2>
                            <%= article.title %>
                        </h2>
                        <p class="author">Author: <%= article.author %>
                        </p>
                        <p>
                            <%= article.description %>
                        </p>
                        <p>
                            <%= article.content %>
                        </p>
                        </a>
                    </div>
                </article>
                <% }) %>
        </section>
    </main>
</body>

</html>